<Window x:Class="MapEditor2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapEditor2"
        mc:Ignorable="d"
        Title="MapEditor2 for Tanks 2D/3D" Height="550" Width="800" Icon="/sprites/brick.png">
    <Window.Resources>
        <Style x:Key="ParentMenuItem" TargetType="MenuItem" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border x:Name="Border">
                            <Grid>
                                <ContentPresenter Margin="6,3,6,3" ContentSource="Header" RecognizesAccessKey="True" />
                                <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsSubmenuOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                    <Border x:Name="SubmenuBorder" SnapsToDevicePixels="True" BorderThickness="2" Background="#3c3c3c">
                                        <Border.BorderBrush>
                                            <SolidColorBrush Color="#868686" />
                                        </Border.BorderBrush>
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#FF1F1F1F" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="248*"/>
            <ColumnDefinition Width="259*"/>
            <ColumnDefinition Width="190"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="15*"/>
            <RowDefinition x:Name="outputRow"  Height="0"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Background="{x:Null}" Foreground="#FFD0D0D0" >
            <MenuItem Header="Тайлы" BorderBrush="{x:Null}" Style="{StaticResource ParentMenuItem}">
                <MenuItem Header="Импортировать" Click="ImportTiles_Click"/>
                <MenuItem Header="Экспортировать" Click="ExportTiles_Click"/>
            </MenuItem>
            <MenuItem Header="Карта" Style="{StaticResource ParentMenuItem}">
                <MenuItem Header="Импортировать" Click="ImportMap_Click"/>
                <MenuItem Header="Экспортировать"/>
            </MenuItem>
        </Menu>
        <!--Верхняя панель-->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Background="#FF1F1F1F" Grid.ColumnSpan="3">
            <Button x:Name="clearAll" Width="25" Margin="5 2" Click="ClearAll_Click" Content="🗑️" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFD8D8D8"/>
            <Button x:Name="erasing" Width="25"  Margin="5 2" BorderBrush="{x:Null}" Click="Erasing_Click" Foreground="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="/assets/lastik.png"/>
                </Button.Background>
            </Button>

            <StackPanel Orientation="Horizontal" Background="#FF191919">
                <Button x:Name="pencilTool" Width="25" Margin="5 2" Click="PencilTool_Click" Content="✏️" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFD8D8D8"/>
                <Slider x:Name="brushSize" Width="50" VerticalAlignment="Center" Margin="5 2" Maximum="6" SmallChange="1" Value="1" Minimum="1" ValueChanged="BrushSize_ValueChanged" IsSnapToTickEnabled="True"/>
                <Label Content="{Binding ElementName=brushSize, Path=Value}" Foreground="#FFD6D6D6"/>
            </StackPanel>
            <Button x:Name="moveTool" Width="25"  Margin="5 2" BorderBrush="{x:Null}" Click="MoveTool_Click" Foreground="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="/assets/MoveTool.png"/>
                </Button.Background>
            </Button>
            <StackPanel Orientation="Horizontal" Margin="15 0">
                <Label Foreground="#FFAFAFAF">x:</Label>
                <TextBox x:Name="sizeXTextBox" TextWrapping="NoWrap" Text="10" Width="30" Height="20" HorizontalAlignment="Left" TextAlignment="Center" Background="#FF191919" BorderBrush="{x:Null}" Foreground="#FFAFAFAF" SelectionBrush="#CC2D74FF" SelectionTextBrush="{x:Null}" PreviewTextInput="SizeXTextBox_PreviewTextInput" MaxLines="1" MaxLength="3"/>
                <Label Foreground="#FFAFAFAF">y:</Label>
                <TextBox x:Name="sizeYTextBox" TextWrapping="NoWrap" Text="10" Width="30" Height="20" HorizontalAlignment="Left" TextAlignment="Center" Background="#FF191919" BorderBrush="{x:Null}" Foreground="#FFAFAFAF" SelectionBrush="#CC2D74FF" SelectionTextBrush="{x:Null}" PreviewTextInput="SizeYTextBox_PreviewTextInput" MaxLength="3" MaxLines="1"/>
                <Button Content="OK" Margin="10 0" Height="20" Width="25" Click="Button_Click" Background="#FFA7A7A7" BorderBrush="{x:Null}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
        <!--Canvas-->
        <Border x:Name="canvasWrapper" PreviewMouseDown="CanvasWrapper_MouseDown" PreviewMouseMove="CanvasWrapper_MouseMove" PreviewMouseUp="CanvasWrapper_MouseUp" Grid.Column="0" Grid.Row="2" BorderBrush="#3D3D3D" BorderThickness="1" Margin="4,4,4,4" Background="#FF1A1A1A" Grid.ColumnSpan="2" ClipToBounds="True">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="myCanvas" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center" ClipToBounds="True">
                </Canvas>
            </ScrollViewer>
        </Border>
        <!--Tiles-->
        <Border Grid.Row="2" Grid.Column="3" BorderBrush="#3D3D3D" Margin="4,4,4,4" Background="#FF1A1A1A" BorderThickness="1" Grid.RowSpan="2">
            <WrapPanel x:Name="itemsPanel">
                <Button x:Name="addSprite" Content="+" Background="{x:Null}" Foreground="#FFD6D6D6" FontWeight="Bold" FontSize="24" FontFamily="Cascadia Code" Width="32" Margin="5" Click="AddSprite_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </WrapPanel>
        </Border>
        <StackPanel Grid.Column="2" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
        </StackPanel>
        <!--Вывод-->
        <TextBox x:Name="output" Grid.Row="3" Grid.Column="0" Text="" Margin="4,4,4,4" TextWrapping="Wrap" BorderBrush="#3D3D3D" Background="#FF1E1E1E" Foreground="#FFD6D6D6" Grid.ColumnSpan="2"/>
        <GridSplitter Grid.Row="3" Grid.Column="0" Height="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.ColumnSpan="2" Background="#FF1F1F1F"/>
        <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal">
            <Label x:Name="point" Foreground="#FFD6D6D6" Content="90 x 65" FontSize="10" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0 0 10 0">
            <Button x:Name="copyMap" Content="В буфер" Width="100" Height="22" Click="CopyMap_Click" Background="#FFA7A7A7" BorderBrush="{x:Null}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="showOutputButton" Content="Показать вывод" Width="100" Height="22" Margin="10,0" Click="ShowOutputButton_Click" Background="#FFA7A7A7" BorderBrush="{x:Null}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

    </Grid>
</Window>
